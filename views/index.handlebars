        <a href="/materiais/editar/{{id}}" class="edit">Editar</a>

        <form action="/materiais/excluir/{{id}}" method="POST">
          <button type="submit" class="delete">Excluir</button>
        </form>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
