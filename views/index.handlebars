    <tr>
      <th>Produto</th>
      <th>Quantidade</th>
      <th>Destino</th>
      <th>A√ß√µes</th>
    </tr>
  </thead>

  <tbody>
    {{#each materiais}}
    <tr>
      <td>{{produto}}</td>
      <td>{{quantidade}}</td>
      <td>{{destino}}</td>

      <!-- üî• AQUI √© o ponto-chave -->
